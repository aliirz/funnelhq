= form_for @project do |f|

  = render 'shared/error_messages', :target => @project

  .field
    = f.label :title
    = f.text_field :title, :placeholder => 'a title for your project'

  .field
    = f.label :project_type
    = f.select :project_type, Project::TYPES
   
  .field
    = f.label 'Client'
    = f.select :client_id, current_user.clients.collect{ |c| [c.name, c.id] }

  .field
    = f.label :description
    = f.text_field :description, :placeholder => 'a brief description of the project'

  .actions
    = f.submit 'Save'
